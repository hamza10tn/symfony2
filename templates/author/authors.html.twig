            <td>   <form method="post" action="{{ path('deleteau', {'id': a.id}) }}" onsubmit="return confirm('Are you sure you want to delete this author?');">
                            <button type="submit">Delete</button></form></td>
                            <td><a href="{{ path('addbook') }}">ajouterbook</a></td>
                            
        {% endfor %}

         
    </tbody>
    </table>

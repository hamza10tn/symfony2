{% extends 'base.html.twig' %}

{% block title %}List Authors{% endblock %}
{% block body %}

<p><h1>List Authors</h1></p>
<table border='2'>
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for a in auth %}
        <tr>
            <td>{{ a.id }}</td>

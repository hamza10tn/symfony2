{% extends 'base.html.twig' %}

{% block title %}List Books{% endblock %}
{% block body %}

<p><h1>List Books</h1></p>
<table border='2'>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Category</th>
            <th>Publication Date</th>
            <th>isPublished</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for a in books %}
        <tr>
            <td>{{ a.id }}</td>
            <td>{{ a.title }}</td>
            <td>{{ a.category }}</td>
            <td>{{ a.publicationDate | date('Y-m-d H:i:s') }}</td>
            <td>{{ a.published }}</td>

            <td> <form  method="post" action="{{ path('detailbook', {'id': a.id}) }}">
                            <button type="submit">View</button></form></td>
            <td> <form method="post" action="{{ path('editbook', {'id': a.id}) }}"><button type="submit">Edit</button></form></td>
            <td>   <form method="post" action="{{ path('deletebook', {'id': a.id}) }}" onsubmit="return confirm('Are you sure you want to delete this author?');">
                            <button type="submit">Delete</button></form></td>
        </tr>
        {% endfor %}
    </tbody>
    </table>
        <form method="post" action="{{ path('addbook')}}"><button type="submit" class="btn btn-success">Ajouter</button></form>

    {% endblock %}
